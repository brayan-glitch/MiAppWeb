<%- include('partials/header') %>

<div class="container">
    <h2>Gesti√≥n de Usuarios</h2>

    <!-- Bot√≥n para ir a Gesti√≥n de C√≥digos -->
    <a href="/codigos" class="btn">üìã Gesti√≥n de C√≥digos</a>

    <!-- üìå Formulario para Crear Usuario -->
    <form action="/usuarios/crear" method="POST" class="formulario">
        <input type="text" name="nombre" placeholder="Nombre" required>
        <input type="text" name="telefono" placeholder="Tel√©fono" required>
        <input type="text" name="localidad" placeholder="Localidad" required>
        <select name="tipo" required>
            <option value="no_admin">No Administrador</option>
            <option value="admin">Administrador</option>
        </select>
        <input type="number" name="saldo" placeholder="Saldo inicial" required>
        <button type="submit" class="btn">‚ûï Crear Usuario</button>
    </form>

    <!-- üìå Lista de Usuarios -->
    <table class="styled-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Tel√©fono</th>
                <th>Localidad</th>
                <th>Tipo</th>
                <th>Saldo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% usuarios.forEach(usuario => { %>
                <tr>
                    <td><%= usuario.nombre %></td>
                    <td><%= usuario.telefono %></td>
                    <td><%= usuario.localidad %></td>
                    <td><%= usuario.tipo %></td>
                    <td>$<%= usuario.saldo %></td>
                    <td>
                        <!-- üìå Recargar Saldo -->
                        <form action="/usuarios/recargar" method="POST" class="form-inline">
                            <input type="hidden" name="usuarioId" value="<%= usuario._id %>">
                            <input type="number" name="monto" placeholder="Monto" required>
                            <input type="number" name="porcentaje" placeholder="%" min="0" step="1">
                            <button type="submit" class="btn-recargar">üí∞ Recargar</button>
                        </form>

                        <!-- üìå Eliminar Usuario -->
                        <form action="/usuarios/eliminar" method="POST" class="form-inline">
                            <input type="hidden" name="usuarioId" value="<%= usuario._id %>">
                            <button type="submit" class="btn-eliminar" onclick="return confirm('¬øSeguro que deseas eliminar este usuario?');">üóëÔ∏è Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>

