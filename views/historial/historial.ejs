<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de C√≥digos Generados</title>
    <style>
        /* Bot√≥n de volver al men√∫ */
        .btn-back {
            display: inline-block;
            margin-bottom: 15px;
            padding: 10px 15px;
            background-color: #2E7D32; /* Verde oscuro */
            color: white;
            text-decoration: none;
            font-size: 16px;
            border-radius: 5px;
            transition: background 0.3s;
        }

        .btn-back:hover {
            background-color: #2E7D32; /* Verde oscuro */
        }

        /* Contenedor de la barra de b√∫squeda */
        .search-container {
            display: flex;
            justify-content: center;
            margin-bottom: 15px;
        }

        /* Estilo de la barra de b√∫squeda */
        #buscarCodigo {
            width: 50%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            outline: none;
            transition: all 0.3s ease;
        }

        #buscarCodigo:focus {
            border-color: #2E7D32; /* Verde oscuro */
            box-shadow: 0px 0px 5px rgba(0, 150, 136, 0.5);
        }

        /* Estilo general de la tabla */
        .styled-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            font-size: 16px;
            text-align: left;
        }

        .styled-table thead {
            background-color: #2E7D32; /* Verde oscuro */
            color: white;
        }

        .styled-table th, .styled-table td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        .styled-table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        /* Ajuste para dispositivos m√≥viles */
        @media (max-width: 600px) {
            #buscarCodigo {
                width: 80%;
            }

            .styled-table th, .styled-table td {
                padding: 8px;
            }
        }
    </style>
</head>
<body>

    <h1>Historial de C√≥digos Generados</h1>

    <!-- Bot√≥n para volver al men√∫ -->
    <a href="/menu" class="btn-back">‚¨Ö Volver al Men√∫</a>

    <!-- Barra de b√∫squeda con estilo -->
    <div class="search-container">
        <input type="text" id="buscarCodigo" placeholder="üîç Buscar c√≥digo o usuario...">
    </div>

    <!-- Tabla con dise√±o mejorado -->
    <table class="styled-table">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>C√≥digo</th>
                <th onclick="ordenarTabla()" style="cursor: pointer;">
                    Fecha <span id="flechaOrden">üîΩ</span>
                </th>
            </tr>
        </thead>
        <tbody id="tablaHistorial">
            <% historial.forEach(item => { %>
                <tr>
                    <td><%= item.usuario && item.usuario.nombre ? item.usuario.nombre : 'Sin usuario' %></td>
                    <td><%= item.codigo %></td>
                    <td data-fecha="<%= item.fechaCompra ? item.fechaCompra.toISOString() : '' %>">
                        <%= item.fechaCompra ? new Date(item.fechaCompra).toLocaleString('es-ES', { dateStyle: 'short', timeStyle: 'short' }) : 'Sin fecha' %>
                    </td>
                    
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Script para ordenar la tabla y filtrar datos -->
    <script>
        let ordenAscendente = true; // Estado inicial: orden ascendente

        function ordenarTabla() {
            let tabla = document.getElementById("tablaHistorial");
            let filas = Array.from(tabla.getElementsByTagName("tr"));

            // Verificar si la tabla tiene filas suficientes para ordenar
            if (filas.length < 2) return;

            filas.sort((a, b) => {
                let fechaA = new Date(a.cells[2].getAttribute("data-fecha") || 0);
                let fechaB = new Date(b.cells[2].getAttribute("data-fecha") || 0);

                return ordenAscendente ? fechaA - fechaB : fechaB - fechaA;
            });

            filas.forEach(fila => tabla.appendChild(fila)); // Reordenar la tabla

            // Cambiar la direcci√≥n de la flecha
            ordenAscendente = !ordenAscendente;
            document.getElementById("flechaOrden").textContent = ordenAscendente ? "üîΩ" : "üîº";
        }

        document.getElementById('buscarCodigo').addEventListener('keyup', function() {
            let filtro = this.value.toLowerCase();
            let filas = document.querySelectorAll("#tablaHistorial tr");

            filas.forEach(fila => {
                let codigo = fila.cells[1].textContent.toLowerCase();
                let usuario = fila.cells[0].textContent.toLowerCase();

                fila.style.display = (codigo.includes(filtro) || usuario.includes(filtro)) ? "" : "none";
            });
        });
    </script>

</body>
</html>
